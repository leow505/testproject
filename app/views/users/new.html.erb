<h1>Welcome!</h1>
<fieldset>
	<legend>Register</legend>
	<% if flash[:message] %>
		<% flash[:message].each do |error| %>
			<p><%= error %></p>
		<% end -%>
	<% elsif flash[:success] %>
		<%= flash[:success] %>
	<% end -%>
	<form method="post" action="/users">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<p>Name: <input type="text" name="user[name]"></p>
		<p>Alias: <input type="text" name="user[alias]"></p>
		<p>Email: <input type="email" name="user[email]"></p>
		<p>Password: <input type="password" name="user[password]"></p>
		<p>Confirm PW: <input type="password" name="user[password_confirmation]"></p>
		<input type="submit" value="Register">
	</form>
</fieldset>
<fieldset>
	<legend>Login</legend>
	<% if flash[:errors] %>
		<p><%= flash[:errors] %></p>
	<% end -%>
	<form method="post" action="/sessions">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<p>Email: <input type="email" name="email"></p>
		<p>Password: <input type="password" name="password"></p>
		<input type="submit" value="Login">
	</form>
</fieldset>